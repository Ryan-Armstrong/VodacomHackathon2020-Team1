.scrollItem {
  display: inline-block;
  text-align: center;
  padding: 3px;
  margin: 3px;
  text-decoration: none;
}

.scrollMenu {
  overflow: auto;
  white-space: nowrap;
  padding: 1px;
}

.scrollText{
  color: rgb(54, 54, 54);
  font-weight: 400;
  font-size: 9px;
}

.scrollImage{
  background: #E60001;
  border-radius: 50px;
  width: 40px;
  height: 40px;
}