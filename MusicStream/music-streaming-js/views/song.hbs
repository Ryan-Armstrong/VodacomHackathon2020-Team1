<div class="ablum-container">
    <div class="song-cover">
        <img class="song-img" id="albumCover" onload="updateSongImg({{output}})" src="/assets/images/placeholder.png">
    </div>
    <div style="display: flex; margin: 20px 0px;">
        <div style="    margin-left: auto;">
            <img src="/assets/icons/favourite_filled.svg" id="favIcon" style="margin-right: 10px;" onclick="addToFav()">
        </div>
        <div style="    margin-right: auto;">
            <img src="/assets/icons/plus_red_big.svg" onclick="addToPlayList({{song.id}})">
        </div>
    </div>

    <div style='text-align: center;
    margin: 20px 0px 10px 0px;    font-size: large;
    font-weight: bold;' id="albumName">We Made It</div>
    <div style='text-align: center;
    margin: 0px 0px 20px 0px;' id="artis">by Mi Casa</div>

    <div style="display: flex; margin-bottom: 10px">
        <img src="/assets/icons/repeat_off.svg" style="width: 30px; margin-left: auto; margin-right: 14px;"
            onclick="repeatClicked()" id="repeatBtn">
        <img src="/assets/icons/skip_back.svg" style="width: 30px;  margin-right: 14px;" onclick="prevSong()">
        <img id="toggleBtn" src="/assets/icons/play_filled.svg" style="width: 40px;  margin-right: 14px;"
            onclick="playSong()">
        <img src="/assets/icons/skip_forward.svg" style="width: 30px;  margin-right: 14px;" onclick="nextSong()">
        <img src="/assets/icons/shuffle_off.svg" style="width: 30px; margin-right: auto" id="shuffleBtn">
    </div>
    <audio id="audio-player" ontimeupdate="updateBar()">
        <source src="/assets/audio/song.mp3" type="audio/mpeg">
    </audio>

    <div style="display: flex;">
        <div id="currentTime" style="margin-right: auto">00:00</div>
        <div id="durationTime">00:00</div>
    </div>



    <div id="progress-status">
        <div id="myprogressBar"></div>
    </div>

    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <p style="margin: 5px;" id="popUpMessage"></p>
        </div>

    </div>

</div>